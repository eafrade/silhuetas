{
    "name": "eafrade/silhuetas",
    "description": "Projeto de Silhuetas - Preenchimento",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.75",
        "squizlabs/php_codesniffer": "^3.12"
    },
    "scripts": {
        "install-vendor": "composer install --no-interaction --prefer-dist",
        "test": "php ./vendor/bin/phpunit --configuration=phpunit.xml.dist --log-junit=phpunit-report.xml",
        "testdox": "php ./vendor/bin/phpunit --configuration=phpunit.xml.dist --testdox",
        "coverage": "php -dxdebug.mode=coverage ./vendor/bin/phpunit --configuration=phpunit.xml.dist --coverage-clover=coverage.xml --coverage-html=tests/reports/coverage --coverage-text --coverage-filter=src --log-junit=phpunit-report.xml --path-coverage",
        "lint": "php ./vendor/bin/phpcs --standard=PSR12 --ignore=vendor/* --extensions=php .",
        "fix": "php ./vendor/bin/php-cs-fixer fix . --verbose --show-progress=dots --using-cache=yes --allow-risky=yes --diff --config=.php-cs-fixer.php",
        "check": "php ./vendor/bin/php-cs-fixer fix . --verbose --dry-run --using-cache=no --allow-risky=yes --diff --config=.php-cs-fixer.php",
        "stan": "php ./vendor/bin/phpstan analyse --error-format=checkstyle > phpstan-checkstyle.xml",
        "run-app": "php process.php"
    }
}
